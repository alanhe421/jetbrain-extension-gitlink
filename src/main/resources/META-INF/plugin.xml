<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>cn.alanhe.plugin.beautiful-gitlink</id>
    <name>Beautiful GitLink</name>
    <vendor url="https://github.com/alanhe421">Alan He</vendor>
    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>
    <description>
        A jetbrains plugin that opens a local file under Git version control in its remote host using the default browser.
    </description>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="cn.alanhe.git.link.settings.ApplicationSettings"/>
        <notificationGroup id="git.link.notification.general" displayType="BALLOON" key="notification.group.general.name" />
        <notificationGroup id="git.link.notification.important" displayType="STICKY_BALLOON" key="notification.group.important.name" />
        <postStartupActivity implementation="cn.alanhe.git.link.listener.ApplicationStartupListener"/>
        <vcsAnnotationGutterActionProvider
            implementation="cn.alanhe.git.link.ui.extensions.AnnotationGutterActionProvider"/>
        <selectInTarget implementation="cn.alanhe.git.link.ui.extensions.SelectInTarget"/>
        <projectConfigurable
            parentId="tools"
            instance="cn.alanhe.git.link.ui.settings.ProjectSettingsConfigurable"
            id="GitLink.ProjectSettings"
            displayName="Beautiful GitLink"
        />
        <applicationConfigurable
            parentId="GitLink.ProjectSettings"
            instance="cn.alanhe.git.link.ui.settings.CustomPlatformSettingsConfigurable"
            id="GitLink.CustomHostSettings"
            displayName="Platforms"
        />
        <applicationConfigurable
            parentId="GitLink.ProjectSettings"
            instance="cn.alanhe.git.link.ui.settings.DomainRegistrySettings"
            id="GitLink.AutoDetectSettings"
            displayName="Domain Registry"
        />
        <applicationConfigurable
            parentId="GitLink.ProjectSettings"
            instance="cn.alanhe.git.link.ui.settings.OtherSettingsConfigurable"
            id="GitLink.OtherSettings"
            displayName="Other Settings"
        />
        <toolWindow
            id="Code Snippet Preview"
            displayName="Code Snippet Preview"
            anchor="right"
            factoryClass="cn.alanhe.git.link.ui.CodeSnippetPreviewToolWindowFactory"
            icon="cn.alanhe.git.link.ui.Icons.GIT_LINK"
        />
    </extensions>

    <!-- UI -->
    <resource-bundle>messages.ActionsBundle</resource-bundle>

    <actions>
        <action
            id="cn.alanhe.git.link.ui.actions.menu.BrowserAction"
            class="cn.alanhe.git.link.ui.actions.menu.BrowserAction"
        >
            <add-to-group group-id="Git.MainMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="shift ctrl O"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl O"/>
        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.menu.CopyAction"
            class="cn.alanhe.git.link.ui.actions.menu.CopyAction"
        >
            <add-to-group group-id="Git.MainMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="shift ctrl C"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl C"/>
        </action>
        <!-- GitLink Others submenu group -->
        <group id="GitLinkOthersGroup" class="cn.alanhe.git.link.ui.actions.menu.GitLinkOthersGroup" popup="true">
            <add-to-group group-id="EditorPopupMenu"/>
            <action
                id="cn.alanhe.git.link.ui.actions.menu.MarkdownAction.Others"
                class="cn.alanhe.git.link.ui.actions.menu.MarkdownSubmenuAction"
            />
            <action
                id="cn.alanhe.git.link.ui.actions.menu.CopyMarkdownSnippetAction"
                class="cn.alanhe.git.link.ui.actions.menu.CopyMarkdownSnippetSubmenuAction"
            />
            <action
                id="cn.alanhe.git.link.ui.actions.menu.CreateGitHubSnippetImageAction"
                class="cn.alanhe.git.link.ui.actions.menu.CreateGitHubSnippetImageSubmenuAction"
            />
        </group>

        <!-- Keep MarkdownAction in other menus for backward compatibility -->
        <action
            id="cn.alanhe.git.link.ui.actions.menu.MarkdownAction"
            class="cn.alanhe.git.link.ui.actions.menu.MarkdownAction"
        >
            <add-to-group group-id="Git.MainMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.vcslog.BrowserAction"
            class="cn.alanhe.git.link.ui.actions.vcslog.BrowserAction"
        >
            <add-to-group group-id="Git.LogContextMenu"/>
            <add-to-group group-id="Vcs.Log.ContextMenu"/>
            <add-to-group group-id="Vcs.FileHistory.ContextMenu"/>
        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.vcslog.CopyAction"
            class="cn.alanhe.git.link.ui.actions.vcslog.CopyAction"
        >
            <add-to-group group-id="Git.LogContextMenu"/>
            <add-to-group group-id="Vcs.Log.ContextMenu"/>
            <add-to-group group-id="Vcs.FileHistory.ContextMenu"/>
        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.vcslog.MarkdownAction"
            class="cn.alanhe.git.link.ui.actions.vcslog.MarkdownAction"
        >
            <add-to-group group-id="Git.LogContextMenu"/>
            <add-to-group group-id="Vcs.Log.ContextMenu"/>
            <add-to-group group-id="Vcs.FileHistory.ContextMenu"/>
        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.gutter.BrowserAction"
            class="cn.alanhe.git.link.ui.actions.gutter.BrowserAction"
        >
            <add-to-group group-id="EditorGutterPopupMenu"/>

        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.gutter.CopyAction"
            class="cn.alanhe.git.link.ui.actions.gutter.CopyAction"
        >
            <add-to-group group-id="EditorGutterPopupMenu"/>

        </action>
        <action
            id="cn.alanhe.git.link.ui.actions.gutter.MarkdownAction"
            class="cn.alanhe.git.link.ui.actions.gutter.MarkdownAction"
        >
            <add-to-group group-id="EditorGutterPopupMenu"/>

        </action>
    </actions>
</idea-plugin>
